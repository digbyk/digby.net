extends ../layout

block main
	link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/css/select2.min.css')
	h1 All I Want For
	select#members
		option(value="digby@digby.net") digby@digby.net
	table
		thead
			tr
				th Gift
				th For
		tbody
			each gift in gifts
				tr
					td= gift.name
					td= gift.owner
		script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js")
		script(src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/js/select2.min.js")
		script.
			function modesel() {
				$('#members').select2({
					tags: true,
					tokenSeparators: [',', ' ']
				});
			};
			window.onload = modesel;