extends ./layout

block append head
	link(rel="stylesheet", href="/css/aiwf.css")

block main
	#content
		h5 All I Want For
		table.mdl-data-table.mdl-js-data-table.mdl-shadow--4dp
			thead
				tr
					th.mdl-data-table__cell--non-numeric Name
			tbody
				each list in lists
					tr
						td.mdl-data-table__cell--non-numeric
							a(href="alliwantfor/#{list.id}") #{list.name}
							br
							span= list.notes
									
			button.new.mdl-button.mdl-js-button.mdl-button--fab.mdl-button--colored.mdl-js-ripple-effect
				i.material-icons.md-light add