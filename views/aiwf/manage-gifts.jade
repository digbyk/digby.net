extends ./layout

block append head
	link(rel="stylesheet", href="/css/aiwf.css")
	link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2/css/select2.min.css")

block main
	#content
		section
		h5 Manage gifts
		table.mdl-data-table.mdl-js-data-table.mdl-shadow--4dp
			thead
				tr
					th.mdl-data-table__cell--non-numeric Name
					th Actions
			tbody
				each gift in gifts
					tr(data-mdl-data-table-selectable-value="gift-#{gift.id}")
						td.mdl-data-table__cell--non-numeric
							a(href="edit/#{gift.id}")= gift.name
							br
							span= gift.list.name
						td
							a(href="edit/#{gift.id}")
								i.material-icons.md-dark edit
							a.mdl-list__item-secondary-action(href="delete/#{gift.id}")
								i.material-icons.md-dark delete
										
			a.new.mdl-button.mdl-js-button.mdl-button--fab.mdl-button--colored.mdl-js-ripple-effect(href="/alliwantfor/gifts/add")
				i.material-icons.md-light add
			
block append script
	script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2/js/select2.min.js")
	script.
		$("#members").select2({
			tags: true,
			tokenSeparators: [',', ' '],
			placeholder: 'Add members (emails)'
		});